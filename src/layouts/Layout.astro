---
import '../assets/styles/reset.css';
import '../assets/styles/composition/_index.scss';
import '../assets/styles/_utilities.scss';
import '../assets/styles/block/_index.scss';

export interface Props {
  title: string;
}

const { title } = Astro.props;

const TEXT = {
  skipToContent: 'Skip to content',
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/ico" href="/favicon.ico" />
    <link rel="stylesheet" href="https://use.typekit.net/tts5cfx.css" />
  </head>
  <body class="bg-secondary-100">
    <a href="#main-content">{TEXT.skipToContent}</a>
    <slot />
  </body>
</html>
